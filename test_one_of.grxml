<?xml version="1.0"?>
<grammar xmlns="http://www.w3.org/2001/06/grammar" xml:lang="en-US" version="1.0" root="command">
  <rule id="command" scope="public">
    <one-of>
      <item>start</item>
      <item>stop service</item>
      <item>restart</item>
    </one-of>
    <item repeat="0-1"> please</item> <!-- Added optional part -->
  </rule>
</grammar>