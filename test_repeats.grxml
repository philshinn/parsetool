<?xml version="1.0"?>
<grammar xmlns="http://www.w3.org/2001/06/grammar" xml:lang="en-US" version="1.0" root="testrepeat">
  <rule id="testrepeat" scope="public">
    <item repeat="0-1">maybe</item>
    <item>this</item>
    <item repeat="1-"> works</item> <!-- Leading space here matters -->
    <item repeat="0-"> indeed</item>
  </rule>
</grammar>